<%include ./partials/header%>

<div  class="ui main text container segment">
    <div class="ui huge header"> Edit <%=blog.title%></div>  
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label >Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>

             <div class="field">
                <label >Image</label>
               <input type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>">
            </div>

             <div class="field">
                <label >Content</label>
                <textarea  name="blog[body]"><%=blog.body%></textarea>
            </div>
  
            <input class="ui inverted green button" type="submit">

    </form>
</div>

<%include ./partials/footer %>